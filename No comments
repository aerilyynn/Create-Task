from datetime import date
import calendar
import os


today = date.today()
to_do_list = []

year = today.year
month = today.month
today = date.today()

def clear_screen():
    os.system('cls' if os.name == 'nt' else 'clear') # Clear the screen each time


def display_month(year, month):
    while True:
        clear_screen()
        print("--- Monthly Calendar ---")
        print(calendar.month(year, month))
        answer = input("What would you like to do?\n1. Go to the next month\n2. Go to the previous month\n3. View daily planner\n4. Exit (This will reset your data)\n")
        if answer == "1":
            month += 1
            if month > 12:
                month = 1
                year += 1
            display_month(year, month)
        elif answer == "2":
            month -= 1
            if month < 1:
                month = 12
                year -= 1
            display_month(year, month)
        elif answer == "3":
            daily_planner()
        elif answer == "4":
            exit()
        else:
            print("Invalid input. Please try again.")
            display_month(year, month)


def daily_planner():
    while True:
        clear_screen()
        print("--- Daily Planner ---")
        print("It is " + str(today) + " today.")
        print("Your current to-do list: ")
        if len(to_do_list) == 0:
            print("[empty]")
        else:
            for index, item in enumerate(to_do_list, 1):
                print(f"{index}. {item}")
        print("\n")

        answer = input("What would you like to do?\n1. Add an item to your to-do list\n2. Remove an item from your to-do list\n3. View monthly calendar\n4. Exit (This will reset your data)\n")
        if answer == "1":
            add = input("What would you like to add to your to-do list? ")
            to_do_list.append(add)
            daily_planner()
        elif answer == "2":
            if len(to_do_list) == 0:
                print("Your to-do list is empty.")
                daily_planner()
            else:
                try:
                    item_number = int(input("Enter the number of the item you would like to remove: "))
                    if 1 <= item_number <= len(to_do_list):
                        removed_item = to_do_list.pop(item_number - 1)
                        print(f"{removed_item} has been removed from your to-do list.")
                        daily_planner()
                    else:
                        print("Invalid number. Please try again.")
                        daily_planner()
                except ValueError:
                    print("Invalid input. Please enter a number.")
                    daily_planner()
        elif answer == "3":
            display_month(year, month)
        elif answer == "4":
            exit()
        else:
            print("Invalid input. Please try again.")
            daily_planner()


clear_screen()
print("\nWelcome to your digital planner! Here you can write down anything you need to keep track of.")
print("There is a monthly view, a weekly view, and a daily view.")
print("You can add items to your to-do list for any specified date.\n")
answer = input("What would you like to do?\n1. View monthly calendar\n2. View daily planner\n3. Exit (This will reset your data)\n")
if answer == "1":
    display_month(year, month)
elif answer == "2":
    daily_planner()
elif answer == "3":
    exit()
else:
    print("Invalid input. Please try again.")